<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    tools:context=".MainActivity">
    
    <TextView
        android:id="@+id/titlePageWork"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginStart="24dp"
        android:fontFamily="@font/poppinsbold"
        android:lineSpacingExtra="8dp"
        android:text="Top Exercises"
        android:textColor="@color/black"
        android:textSize="30dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/subTitlePageWork"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="6dp"
        android:fontFamily="@font/poppinsbold"
        android:lineSpacingExtra="8dp"
        android:text="Easy Exercises for Beginners."
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="19dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/titlePageWork"
        />
    
    <View
        android:id="@+id/divpageWork"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="26dp"
        android:layout_marginStart="26dp"
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/subTitlePageWork"
        />

    <TextView
        android:id="@+id/introPageWork"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginStart="24dp"
        android:fontFamily="@font/poppinsbold"
        android:lineSpacingExtra="8dp"
        android:text="Introduction"
        android:textColor="@color/black"
        android:textSize="26dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/divpageWork" />

    <TextView
        android:id="@+id/subIntroPageWork"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="6dp"
        android:fontFamily="@font/poppinsbold"
        android:lineSpacingExtra="8dp"
        android:text="You can add here whatever related\nto you exercises."
        android:textAlignment="textStart"
        android:textColor="@color/black"
        android:textSize="17dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/introPageWork" />
    
    <LinearLayout
        android:id="@+id/fitTitleChest"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/subIntroPageWork"
        >
        <ImageView
            android:src="@drawable/ic_chest_arnold"
            android:layout_width="120dp"
            android:layout_height="70dp"
            />

        <LinearLayout
            android:layout_marginLeft="12dp"
            android:layout_marginTop="8dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >

            <TextView
                android:id="@+id/fitChestWork"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Chest Workout"
                android:textColor="@color/black"
                android:textSize="22sp"
                />

            <TextView
                android:id="@+id/fitscChestWork"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="3 to 13 Minutes"
                android:textColor="@color/black"
                android:textSize="17sp"
                />


        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/fitTitleBiceps"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/fitTitleChest"
        >
        <ImageView
            android:src="@drawable/ic_biceps_arnold"
            android:layout_width="120dp"
            android:layout_height="70dp"
            />

        <LinearLayout
            android:layout_marginLeft="12dp"
            android:layout_marginTop="8dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >

            <TextView
                android:id="@+id/fitBicepsWork"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Biceps Workout"
                android:textColor="@color/black"
                android:textSize="22sp"
                />

            <TextView
                android:id="@+id/fitscBicepsWork"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="4 to 14 Minutes"
                android:textColor="@color/black"
                android:textSize="17sp"
                />


        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/fitTitleShoulder"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/fitTitleBiceps"
        >
        <ImageView
            android:src="@drawable/ic_shoulder_caikepro"
            android:layout_width="120dp"
            android:layout_height="70dp"
            />

        <LinearLayout
            android:layout_marginLeft="12dp"
            android:layout_marginTop="8dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >

            <TextView
                android:id="@+id/fitShoulderWork"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Shoulder Workout"
                android:textColor="@color/black"
                android:textSize="22sp"
                />

            <TextView
                android:id="@+id/fitscShoulderWork"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="5 to 15 Minutes"
                android:textColor="@color/black"
                android:textSize="17sp"
                />


        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:id="@+id/fitTitleLeg"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/fitTitleShoulder"
        >
        <ImageView
            android:src="@drawable/ic_squat_ronniecoleman"
            android:layout_width="120dp"
            android:layout_height="70dp"
            />

        <LinearLayout
            android:layout_marginLeft="12dp"
            android:layout_marginTop="8dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >

            <TextView
                android:id="@+id/fitLegWork"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Leg Workout"
                android:textColor="@color/black"
                android:textSize="22sp"
                />

            <TextView
                android:id="@+id/fitscLegWork"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="5 to 15 Minutes"
                android:textColor="@color/black"
                android:textSize="17sp"
                />


        </LinearLayout>

    </LinearLayout>

    <View
        android:id="@+id/progressBtnWork"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="15dp"
        android:background="@color/colorPrimaryDark"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        />


    <TextView
        android:id="@+id/exerciceBtnWork"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:fontFamily="@font/poppinsbold"
        android:gravity="center"
        android:text="CONTINUE WORKOUT"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="22dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.894"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/workoutBackBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginEnd="324dp"
        android:layout_marginBottom="8dp"
        android:fontFamily="@font/poppinsbold"
        android:gravity="center"
        android:text="BACK"
        android:textAlignment="center"
        android:textColor="@color/purple_500"
        android:textSize="22dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>